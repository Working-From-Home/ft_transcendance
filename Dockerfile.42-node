FROM node:16-alpine3.14
# node alpine3.15 tag not present, and postgres only support 3.15...
# waiting for pr to be merged : https://github.com/nodejs/docker-node/pull/1615

RUN apk add --no-cache su-exec curl zsh git emacs vim;

# https://github.com/nodejs/docker-node/blob/main/docs/BestPractices.md#global-npm-dependencies
ENV NPM_CONFIG_PREFIX=/home/node/.npm-global
ENV PATH=$PATH:/home/node/.npm-global/bin

# set up specific uid and gid : https://github.com/nodejs/docker-node/blob/main/docs/BestPractices.md#non-root-user
ARG HOST_UID=1000
ARG HOST_GID=1000

ARG HOST_UID=36435
ARG HOST_GID=4305

RUN deluser --remove-home node \
  && addgroup -S node -g $HOST_GID \
  && adduser -u $HOST_UID -G node -SD -s /bin/sh node \
  && mkdir -p /app \
  && chown -R node:node /app

USER node

ARG OH_MY_ZSH_THEME=cloud
RUN set -eux; \
		sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"; \
		sed -i "s/\(^ZSH_THEME=\).*/\1$OH_MY_ZSH_THEME/" ~/.zshrc; \
		npm install -g \
			@nestjs/cli \
			@vue/cli \
			typeorm-cli \
			@stoplight/prism-cli;


VOLUME  /app
WORKDIR /app

USER root

COPY docker-entrypoint.sh /usr/local/bin
ENTRYPOINT ["docker-entrypoint.sh"]

CMD [ "zsh" ]
